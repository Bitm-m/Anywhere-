<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="normalCategory"
        android:title="@string/settings_category_normal">

        <SwitchPreferenceCompat
            android:key="transparentIcon"
            android:title="@string/settings_transparent_icon_title"
            app:summary="@string/settings_transparent_icon_summary"
            app:icon="@drawable/ic_transparent_icon"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            android:key="editorEntryAnim"
            android:title="@string/settings_editor_entry_animation"
            app:summary="@string/settings_editor_entry_animation_summary"
            app:icon="@drawable/ic_animation"
            app:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>