<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/til_paste"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/bsd_edit_text_margin_horizontal"
    android:layout_marginTop="@dimen/bsd_item_margin_vertical"
    android:layout_marginEnd="@dimen/bsd_edit_text_margin_horizontal"
    android:hint="@string/dialog_restore_apply_paste_hint">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/tiet_paste"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
