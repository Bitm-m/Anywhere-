<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Design.BottomSheet.Modal">

    <ImageButton
        android:id="@+id/ib_editor_menu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/bottom_sheet_dialog_edit_text_margin_start_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_more_vert"
        android:tooltipText="@string/menu_more"
        android:contentDescription="@string/anywhere_more_todo"
        tools:targetApi="o" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ib_editor_menu"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="20dp"
        android:layout_marginStart="@dimen/bottom_sheet_dialog_edit_text_margin_start_end"
        android:layout_marginEnd="@dimen/bottom_sheet_dialog_edit_text_margin_start_end"
        android:hint="@string/bsd_text_input_layout_app_name_label"
        app:helperText="@string/bsd_text_input_layout_app_name_helper_text"
        app:helperTextEnabled="true"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_description"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_app_name"
        android:layout_marginTop="5dp"
        android:layout_marginStart="@dimen/bottom_sheet_dialog_edit_text_margin_start_end"
        android:layout_marginEnd="@dimen/bottom_sheet_dialog_edit_text_margin_start_end"
        android:hint="@string/bsd_text_input_layout_description_label"
        app:helperText="@string/bsd_text_input_layout_description_helper_text"
        app:helperTextEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_edit_anywhere_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bsd_btn_done"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/til_description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/bottom_sheet_dialog_edit_text_margin_start_end" />

</androidx.constraintlayout.widget.ConstraintLayout>