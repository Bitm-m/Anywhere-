<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/include_select_working_mode"
            layout="@layout/card_select_working_mode" />

        <include
            android:id="@+id/include_acquire_root_permission"
            layout="@layout/card_acquire_root_permission" />

        <include
            android:id="@+id/include_acquire_shizuku_permission"
            layout="@layout/card_acquire_shizuku_permission" />

        <include
            android:id="@+id/include_acquire_overlay_permission"
            layout="@layout/card_acquire_overlay_permission" />

        <include
            android:id="@+id/include_acquire_popup_permission"
            layout="@layout/card_acquire_popup_permission" />

    </LinearLayout>

</ScrollView>