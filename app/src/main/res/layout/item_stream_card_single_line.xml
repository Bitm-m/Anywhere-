<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/cardview_margin_parent_horizontal"
    android:layout_marginTop="@dimen/cardview_spacing_stream"
    android:layout_marginEnd="@dimen/cardview_margin_parent_horizontal"
    android:layout_marginBottom="@dimen/cardview_spacing_stream"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:transitionName="app_card_container"
    android:translationZ="@dimen/cardview_elevation"
    app:cardCornerRadius="@dimen/cardview_corner_radius"
    app:cardElevation="@dimen/cardview_elevation">

    <ImageView
        android:id="@+id/iv_card_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background_todo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/rl_badge_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/cardview_item_margin_long"
            android:layout_marginTop="@dimen/cardview_item_margin"
            android:layout_marginBottom="@dimen/cardview_item_margin">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_app_icon"
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                app:backgroundTint="@color/material_on_surface_emphasis_medium"
                app:backgroundTintMode="add" />

            <ImageView
                android:id="@+id/iv_badge"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/icon_badge_todo" />

        </RelativeLayout>

        <com.absinthe.anywhere_.view.AlwaysMarqueeTextView
            android:id="@+id/tv_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/cardview_item_margin"
            android:layout_marginEnd="@dimen/cardview_item_margin"
            android:layout_toEndOf="@id/rl_badge_icon"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@{appName}"
            android:textColor="@color/textColorNormal"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>