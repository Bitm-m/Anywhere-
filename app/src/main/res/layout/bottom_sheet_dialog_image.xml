<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Design.BottomSheet.Modal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/ib_editor_menu"
        android:layout_width="@dimen/bsd_tool_size"
        android:layout_height="@dimen/bsd_tool_size"
        android:layout_marginEnd="@dimen/bsd_edit_text_margin_horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/anywhere_more_todo"
        android:tooltipText="@string/menu_more"
        app:layout_constraintBottom_toBottomOf="@id/toggle_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/toggle_group"
        app:srcCompat="@drawable/ic_more_vert"
        tools:targetApi="o" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bsd_edit_text_margin_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/bsd_edit_text_margin_horizontal"
        android:layout_marginBottom="10dp"
        app:checkedButton="@id/btn_local"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_local"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_local_image" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_web"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_web_image" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="@dimen/bsd_edit_text_margin_horizontal"
        android:paddingStart="@dimen/bsd_edit_text_margin_horizontal"
        android:paddingEnd="@dimen/bsd_edit_text_margin_horizontal"
        android:src="@drawable/ic_image_placeholder"
        app:layout_constraintBottom_toTopOf="@id/til_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toggle_group" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_url"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bsd_edit_text_margin_horizontal"
        android:layout_marginTop="@dimen/bsd_item_margin_vertical"
        android:layout_marginEnd="@dimen/bsd_edit_text_margin_horizontal"
        android:hint="@string/bsd_text_input_layout_image_uri_hint"
        app:errorEnabled="true"
        app:helperText="@string/bsd_text_input_layout_image_uri_helper_text"
        app:helperTextEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/iv_preview">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_app_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bsd_edit_text_margin_horizontal"
        android:layout_marginTop="@dimen/bsd_item_margin_vertical"
        android:layout_marginEnd="@dimen/bsd_edit_text_margin_horizontal"
        android:hint="@string/bsd_text_input_layout_app_name_label"
        app:errorEnabled="true"
        app:helperText="@string/bsd_text_input_layout_app_name_helper_text"
        app:helperTextEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/til_url">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_description"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bsd_edit_text_margin_horizontal"
        android:layout_marginTop="@dimen/bsd_item_margin_vertical"
        android:layout_marginEnd="@dimen/bsd_edit_text_margin_horizontal"
        android:hint="@string/bsd_text_input_layout_description_label"
        app:helperText="@string/bsd_text_input_layout_description_helper_text"
        app:helperTextEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/til_app_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_edit_anywhere_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/bsd_edit_text_margin_horizontal"
        android:text="@string/bsd_btn_done"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_description" />

</androidx.constraintlayout.widget.ConstraintLayout>