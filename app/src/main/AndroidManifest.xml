<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.absinthe.anywhere_">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Shortcuts -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission
        android:name="moe.shizuku.manager.permission.API"
        android:maxSdkVersion="23" />

    <uses-permission-sdk-23 android:name="moe.shizuku.manager.permission.API_V23" />
    <uses-permission-sdk-23 android:name="moe.shizuku.manager.permission.EXEC_COMMAND" />

    <application
        android:name=".AnywhereApplication"
        android:theme="@style/AppTheme"
        android:icon="@mipmap/ic_launcher"
        android:label="${appName}"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:label"
        tools:targetApi="m">
        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter> <!-- Start from URL Scheme -->
                <!-- Required -->
                <action android:name="android.intent.action.VIEW" />
                <!-- Start from a browser -->
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Implicit intent -->
                <category android:name="android.intent.category.DEFAULT" />
                <!-- Protocol -->
                <data
                    android:host="url"
                    android:scheme="anywhere" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/settings_title"
            android:launchMode="singleTask"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.about.AboutActivity"
            android:label="@string/about_title"
            android:parentActivityName=".ui.settings.SettingsActivity"
            android:theme="@style/AppTheme.About" />
        <activity
            android:name=".ui.shortcuts.ShortcutsActivity"
            android:excludeFromRecents="true"
            android:label="@string/shortcut_open"
            android:theme="@style/Transparent">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
            </intent-filter>
            <intent-filter> <!-- Start from URL Scheme -->
                <!-- Required -->
                <action android:name="android.intent.action.VIEW" />
                <!-- Start from a browser -->
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Implicit intent -->
                <category android:name="android.intent.category.DEFAULT" />
                <!-- Protocol -->
                <data
                    android:host="open"
                    android:scheme="anywhere" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.backup.BackupActivity"
            android:label="@string/settings_backup"
            android:parentActivityName=".ui.settings.SettingsActivity" />
        <activity
            android:name=".ui.list.AppListActivity"
            android:label="@string/app_list_title"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.list.AppDetailActivity"
            android:parentActivityName=".ui.list.AppListActivity" />
        <activity
            android:name=".ui.settings.TileSettingsActivity"
            android:label="@string/settings_tiles"
            android:parentActivityName=".ui.settings.SettingsActivity" />
        <activity
            android:name=".ui.qrcode.QRCodeCollectionActivity"
            android:label="@string/btn_qr_code_collection"
            android:parentActivityName=".ui.main.MainActivity" />
        <activity
            android:name=".ui.settings.LabActivity"
            android:label="@string/settings_lab"
            android:parentActivityName=".ui.settings.SettingsActivity" />
        <activity android:name=".ui.gift.GiftActivity"
            android:label="@string/settings_gift"
            android:parentActivityName=".ui.settings.SettingsActivity" />

        <provider
            android:name="moe.shizuku.api.ShizukuBinderReceiveProvider"
            android:authorities="${applicationId}.shizuku"
            android:enabled="true"
            android:exported="true"
            android:multiprocess="false"
            android:permission="android.permission.INTERACT_ACROSS_USERS_FULL" />

        <service
            android:name=".services.CollectorTileService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_logo"
            android:label="@string/tile_collector_on"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".services.OverlayService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".services.TileOneService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_android"
            android:label="One"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".services.TileTwoService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_android"
            android:label="Two"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".services.TileThreeService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/ic_android"
            android:label="Three"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <service
            android:name=".services.CollectorService"
            android:enabled="true" />
        <service
            android:name=".services.AppRemoteViewsService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".provider.HomeWidgetProvider">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_home_provider_info" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.absinthe.anywhere_.action.CLICK" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="android.max_aspect"
            android:value="2.2" />
    </application>

</manifest>